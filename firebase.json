{
  "hosting": {
    "public": "frontend",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**",
      "**/*.apk",
      "**/*.exe",
      "**/*.bat",
      "**/*.cmd",
      "**/*.sh"
    ],
    "headers": [
      {
        "source": "/sw.js",
        "headers": [
          { "key": "Cache-Control", "value": "no-cache" }
        ]
      },
      {
        "source": "/marketplace",
        "headers": [
          { "key": "Cache-Control", "value": "no-cache, no-store, must-revalidate" }
        ]
      },
      {
        "source": "/marketplace-auth",
        "headers": [
          { "key": "Cache-Control", "value": "no-cache, no-store, must-revalidate" }
        ]
      },
      {
        "source": "/mi-cuenta",
        "headers": [
          { "key": "Cache-Control", "value": "no-cache, no-store, must-revalidate" }
        ]
      },
      {
        "source": "/marketplace.html",
        "headers": [
          { "key": "Cache-Control", "value": "no-cache, no-store, must-revalidate" }
        ]
      },
      {
        "source": "/marketplace-auth.html",
        "headers": [
          { "key": "Cache-Control", "value": "no-cache, no-store, must-revalidate" }
        ]
      }
    ],
    "rewrites": [
      { "source": "/marketplace-auth", "destination": "/marketplace-auth.html" },
      { "source": "/marketplace-auth/**", "destination": "/marketplace-auth.html" },
      { "source": "/mi-cuenta", "destination": "/mi-cuenta.html" },
      { "source": "/mi-cuenta/**", "destination": "/mi-cuenta.html" },
      { "source": "/marketplace", "destination": "/marketplace.html" },
      { "source": "/marketplace/**", "destination": "/marketplace.html" },
      { "source": "/cart", "destination": "/cart.html" },
      { "source": "/checkout", "destination": "/checkout.html" },
      { "source": "/me/orders/", "destination": "/my-orders.html" },
      { "source": "/orders/**", "destination": "/order.html" },
      { "source": "/me/orders", "destination": "/my-orders.html" },
      { "source": "/merchant/products/**", "destination": "/comercio-marketplace.html" },
      { "source": "/merchant/orders/**", "destination": "/comercio-marketplace.html" }
    ]
  },
  "database": {
    "rules": "database.rules.json"
  },
  "functions": {
    "source": "functions"
  }
}
